# /etc/nginx/sites-available/app-root
# vhost principal do site senado-nusp.cloud

# ---------- Upstream Django (Gunicorn) ----------
# Django está rodando em 127.0.0.1:8000 via systemd (senado-api.service)
# (conforme o plano de migração)  :contentReference[oaicite:1]{index=1}
upstream django_upstream {
    server 127.0.0.1:8000;
    keepalive 32;
}

# ---------- HTTP -> HTTPS ----------
server {
    listen 80;
    listen [::]:80;
    server_name senado-nusp.cloud www.senado-nusp.cloud;
    return 301 https://$host$request_uri;
}

# ---------- HTTPS ----------
server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name senado-nusp.cloud www.senado-nusp.cloud;

    # Certificados Let's Encrypt do domínio principal
    ssl_certificate     /etc/letsencrypt/live/senado-nusp.cloud/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/senado-nusp.cloud/privkey.pem;

    # Front-end estático
    root  /var/www/app;
    index index.html;

    # Cabeçalhos padrão de proxy (herdados pelas locations com proxy_pass)
    proxy_http_version 1.1;
    proxy_set_header Host               $host;
    proxy_set_header X-Real-IP          $remote_addr;
    proxy_set_header X-Forwarded-For    $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto  $scheme;
    proxy_set_header Connection         "";

    # Rotas do seu front (mantidas)
    location = /      { try_files /index.html =404; }
    location /imgs/   { try_files $uri        =404; }
    location = /home {
        auth_request /webhook/auth/html-guard;
        error_page 401 = /index.html;
        try_files /home.html =404;
    }
    location = /home.html {
        auth_request /webhook/auth/html-guard;
        error_page 401 = /index.html;
        try_files /home.html =404;
    }
    location /forms/ {
        auth_request /webhook/auth/html-guard;
        error_page 401 = /index.html;
        try_files $uri $uri/ =404;
    }
    location ^~ /admin/ {
        auth_request /webhook/auth/html-guard;
        error_page 401 = /index.html;
        try_files $uri $uri/ =404;
    }

    # ---------- Arquivos públicos (/files) ----------
    # Publica o diretório de uploads sob a URL /files/
    # Padrão do plano Django: FILES_DIR = /srv/senado/media   :contentReference[oaicite:2]{index=2}
    location ^~ /files/ {
        alias /srv/senado/media/;
        autoindex off;
        try_files $uri =404;
        expires 30d;
        add_header Cache-Control "public, max-age=2592000";
    }

    # ---------- Rotas migradas para Django (mesmo contrato /webhook/*) ----------
    # (mantém o front intacto e só desvia estas rotas)  :contentReference[oaicite:3]{index=3}
    location = /webhook/login                         { proxy_pass http://django_upstream; }
    location = /webhook/auth/html-guard {
        proxy_pass http://django_upstream;

        proxy_set_header Host              $host;
        proxy_set_header X-Real-IP         $remote_addr;
        proxy_set_header X-Forwarded-For   $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto https;
    }
    location = /webhook/whoami                        { proxy_pass http://django_upstream; }
    location = /webhook/forms/lookup/comissoes        { proxy_pass http://django_upstream; }
    location = /webhook/forms/lookup/operadores       { proxy_pass http://django_upstream; }
    location = /webhook/forms/lookup/salas            { proxy_pass http://django_upstream; }
    location = /webhook/forms/lookup/registro-operacao { proxy_pass http://django_upstream; }
    location = /webhook/admin/operadores/novo         { proxy_pass http://django_upstream; }
    location = /webhook/admin/admins/novo             { proxy_pass http://django_upstream; }
    location = /webhook/admin/dashboard/operadores    { proxy_pass http://django_upstream; }
    location = /webhook/admin/dashboard/checklists    { proxy_pass http://django_upstream; }
    location = /webhook/admin/dashboard/anormalidades/salas     { proxy_pass http://django_upstream; }
    location = /webhook/admin/dashboard/anormalidades/lista     { proxy_pass http://django_upstream; }
    location = /webhook/admin/dashboard/operacoes     { proxy_pass http://django_upstream; }
    location = /webhook/admin/dashboard/operacoes/entradas     { proxy_pass http://django_upstream; }
    location = /webhook/admin/dashboard/operadores/relatorio { proxy_pass http://django_upstream; }
    location = /webhook/admin/dashboard/checklists/relatorio { proxy_pass http://django_upstream; }
    location = /webhook/admin/dashboard/anormalidades/lista/relatorio { proxy_pass http://django_upstream; }
    location = /webhook/admin/dashboard/operacoes/relatorio{ proxy_pass http://django_upstream; }
    location = /webhook/admin/dashboard/operacoes/entradas/relatorio { proxy_pass http://django_upstream; }
    location = /webhook/admin/operacao/detalhe        { proxy_pass http://django_upstream; }
    location = /webhook/admin/checklist/detalhe        { proxy_pass http://django_upstream; }
    location = /webhook/admin/anormalidade/observacao-supervisor        { proxy_pass http://django_upstream; }
    location = /webhook/admin/anormalidade/observacao-chefe        { proxy_pass http://django_upstream; }
    location = /webhook/admin/anormalidade/detalhe        { proxy_pass http://django_upstream; }
    location = /webhook/admin/form-edit/salas/list       { proxy_pass http://django_upstream; }
    location = /webhook/admin/form-edit/salas/save      { proxy_pass http://django_upstream; }
    location = /webhook/admin/form-edit/checklist-itens/list        { proxy_pass http://django_upstream; }
    location = /webhook/admin/form-edit/checklist-itens/save        { proxy_pass http://django_upstream; }
    location = /webhook/admin/form-edit/comissoes/list       { proxy_pass http://django_upstream; }
    location = /webhook/admin/form-edit/comissoes/save      { proxy_pass http://django_upstream; }
    location = /webhook/operacao/registro             { proxy_pass http://django_upstream; }
    location = /webhook/operacao/audio/estado-sessao    { proxy_pass http://django_upstream; }
    location = /webhook/operacao/audio/salvar-entrada   { proxy_pass http://django_upstream; }
    location = /webhook/operacao/audio/finalizar-sessao { proxy_pass http://django_upstream; }
    location = /webhook/operacao/anormalidade/registro { proxy_pass http://django_upstream; }
    location = /webhook/forms/checklist/registro      { proxy_pass http://django_upstream; }
    location = /webhook/forms/checklist/itens-tipo      { proxy_pass http://django_upstream; }
    location = /webhook/auth/logout                 { proxy_pass http://django_upstream; }
    
    # ---------- Proxy para Metabase ----------
    location ^~ /metabase/ {
        proxy_pass http://127.0.0.1:3000/;

        proxy_http_version 1.1;
        proxy_set_header Host               $host;
        proxy_set_header X-Real-IP          $remote_addr;
        proxy_set_header X-Forwarded-For    $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto  $scheme;
        proxy_set_header Connection         "";
    }
}